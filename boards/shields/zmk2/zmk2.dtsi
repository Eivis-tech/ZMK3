#include <dt-bindings/zmk/matrix_transform.h>

/ {
    /* Central (LEFT) pusė */
    matrix_transform_left: matrix_transform_left {
        compatible = "zmk,matrix-transform";
        rows = <4>;
        columns = <7>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(3,6)
        >;
    };

    /* Peripheral (RIGHT) pusė */
    matrix_transform_right: matrix_transform_right {
        compatible = "zmk,matrix-transform";
        rows = <4>;
        columns = <7>;
        col-offset = <7>; /* shift columns to right half */
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(3,6)
        >;
    };
};

/* LEFT (central) overlay priskiria transformą */
&physical_layout_zmk2 {
    transform = <&matrix_transform_left>;
};

/* RIGHT (peripheral) overlay priskiria transformą */
&physical_layout_zmk2 {
    transform = <&matrix_transform_right>;
};
